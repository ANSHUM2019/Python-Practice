price=int(input("Enter the price :"))
is_good_credit=bool(input("Enter whether true of false: "))

if is_good_credit:
    down_payment=price*0.1
    print(f"you have to make a down payment of {down_payment}" )

else:

    down_payment=price*0.2
    print(f"you have to make a down payment of {down_payment}")
